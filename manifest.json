{
  "manifest_version": 2,
  "name": "Chrome Tabs Removal",
  "version": "1.0",
  "description": "Highlight and manage tabs based on RAM usage.",
  "permissions": [
    "tabs",
    "processes",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
